{
  "name": "new-circleci",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:niyongaboaristide17/new-circleci.git",
  "author": "niyongaboaristide17 <niyongaboaristide17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src -d dist",
    "start": "npm run build && better-npm-run prod",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "coverage": "yarn run test && better-npm-run cov"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec babel-node ./src/app.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "test": {
      "command": "nyc --reporter=html --reporter=text --reporter=lcov --reporter=text-summary --check-coverage=true mocha --require @babel/register ./tests/* --timeout 1000000 --exit || true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 5000
      }
    },
    "prod": {
      "command": "node ./dist/app.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "cov": {
      "command": "nyc report --reporter=text-lcov | coveralls"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "better-npm-run": "^0.1.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongoose": "^6.2.4"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "mocha": "^9.2.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  }
}
